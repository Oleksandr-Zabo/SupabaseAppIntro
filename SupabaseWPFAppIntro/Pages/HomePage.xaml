<UserControl x:Class="SupabaseWPFAppIntro.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:SupabaseWPFAppIntro.Pages"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300" MinWidth="630" MinHeight="430">
    <UserControl.Background>
        <LinearGradientBrush>
            <GradientStop Color="#0F2027" Offset="0.0" />
            <GradientStop Color="#2C5364" Offset="0.50" />
        </LinearGradientBrush>
    </UserControl.Background>
    <Grid>
        
        <materialDesign:Card  
                             Margin="30" 
                             materialDesign:UniformCornerRadius="20"
                             materialDesign:ElevationAssist.Elevation="Dp16"
                             MaxWidth="600" MaxHeight="300" MinHeight="200" MinWidth="400">
            <StackPanel Orientation="Vertical" Margin="20">
                <TextBlock Text="Welcome to the programme!" FontSize="18" Padding="0 10 0 10" 
                           FontFamily="Inter" FontWeight="SemiBold" Foreground="Azure" HorizontalAlignment="Center"/>
                <TextBlock x:Name="EmailTextBlock" Text="Your email: " FontSize="14" Padding="0 0 0 10" 
                           FontFamily="Inter" FontWeight="Regular" Foreground="Azure"/>
                <TextBlock><Image Source="Assets/Icon/logout.png" Width="48" Height="48" Cursor="Hand" MouseLeftButtonUp="LogoutImage_MouseLeftButtonUp" HorizontalAlignment="Center" /></TextBlock>
                
               
            </StackPanel>
            
        </materialDesign:Card>
    </Grid>
</UserControl>
